<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

	<session-factory>

		<!-- Database connection settings -->
		<property name="hibernate.dialect">org.hibernate.dialect.SQLServerDialect</property>
		<property name="hibernate.connection.driver_class">com.microsoft.sqlserver.jdbc.SQLServerDriver</property>
		<property name="hibernate.connection.url">jdbc:sqlserver://localhost;databaseName=EventManagerDb;instanceName=SQLEXPRESS;</property>
		<property name="hibernate.connection.username">sa</property>
		<property name="hibernate.connection.password">12345678l</property>
		<property name="hibernate.show_sql">true</property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">1</property>

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.internal.NoCacheProvider</property>
		<property name="hibernate.enable_lazy_load_no_trans">true</property>
		<property name="hibernate.current_session_context_class">thread</property>
		
		<!-- Names the annotated entity class -->
		<mapping class="org.dimitar.eventManager.models.Event" />
		<mapping class="org.dimitar.eventManager.models.User" />
		
	</session-factory>

</hibernate-configuration>